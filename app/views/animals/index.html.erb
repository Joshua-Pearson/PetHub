<div class="container">
  <h1 id="animalIndexHeadline">All The Pets in the Hub</h1>

  <h2 class="date"><%= Time.now.localtime.strftime("%B %d") %> </h2>

  <%= render "group" %>

  <% @animals.each do |animal| %>
    <div class="row">
      <div class="col-xs-1">
        <a class="animalTextIndex" href='/animals/<%= animal.id %>'><%= animal.name %></a>
      </div>
      <div class="col-xs-2">
        <a class='animalImageIndex' href='/animals/<%= animal.id %>'><%= image_tag animal.image.url %></a>
      </div>
      <div class="col-xs-2">
        <div class="createdAt">
          Added<br><%= animal.created_at.localtime.strftime("%B %d at %I:%M %p") %>
        </div>
      </div>
      <div class="col-xs-6">
        Messages Go here.
      </div>
    </div>
  <% end %>
</div>
